    "url": "https://github.com/somedotone/ardor-ts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "@types/qs": "^6.5.3",
    "ardorjs": "git+https://github.com/atz3n/ardorjs#v1.0.0",
    "axios": "^0.19.0",
    "bip39": "^3.0.2",
    "qs": "^6.9.0"
  }
}
